[core]
	editor = "nvim"
	pager = "delta"
	excludesfile = "~/.gitignore"
[alias]
	redo = "commit --amend -S"
[gpg]
	format = "ssh"
[commit]
	gpgSign = true
[tag]
	gpgSign = true
[interactive]
	diffFilter = "delta --color-only"
[merge]
	conflictstyle = "diff3"
[pull]
	rebase = true
[delta]
	features = "color-only"
	zero-style = "dim syntax"
