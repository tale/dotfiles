[user]
	name = "Aarnav Tale"
	email = "aarnavtale@icloud.com"
	signingkey = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIL9d0H09lymx1EuydWAHYSd0pQLMRBf0ohSQSVCiBGRB"
[core]
	editor = "nvim"
	pager = "delta"
	excludesfile = "~/.gitignore"
[alias]
	redo = "commit --amend -S"
	p = "pull"
	pu = "push"
	poh = "push origin HEAD"
	a = "add -p"
	s = "status -sb"
[gpg]
	format = "ssh"
[commit]
	gpgSign = true
[tag]
	gpgSign = true
[interactive]
	diffFilter = "delta --color-only"
[merge]
	conflictstyle = "diff3"
[pull]
	rebase = true
[delta]
	features = "color-only"
	zero-style = "dim syntax"
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[includeIf "gitdir:~/code/gh/spear-ai"]
	path = ~/.config/git/work.gitconfig
