alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

alt - 1 : yabai -m space --focus main
alt - 2 : yabai -m space --focus chrome
alt - 3 : yabai -m space --focus discord
alt - 4 : yabai -m space --focus ghostty
alt - a : yabai -m space --focus extra
alt - s : yabai -m space --focus spotify
alt - d : yabai -m space --focus mail

shift + alt - 1 : yabai -m window --space main && yabai -m space --focus main
shift + alt - 2 : yabai -m window --space chrome && yabai -m space --focus chrome
shift + alt - 3 : yabai -m window --space discord && yabai -m space --focus discord
shift + alt - 4 : yabai -m window --space ghostty && yabai -m space --focus ghostty
shift + alt - a : yabai -m window --space extra && yabai -m space --focus extra
shift + alt - s : yabai -m window --space spotify && yabai -m space --focus spotify
shift + alt - d : yabai -m window --space mail && yabai -m space --focus mail


alt - e : yabai -m window --toggle split
alt - f : yabai -m window --toggle zoom-parent
shift + alt - space : yabai -m window --toggle float
ctrl + shift + alt - space : yabai -m space --display next || yabai -m space --display first
